from hub import port, motion_sensor
import runloop, motor, motor_pair
motor_pair.pair(motor_pair.PAIR_1, port.E, port.C)
# motor.reset_relative_position
# motion_sensor.reset_yaw


"""
FOR ALIGNING:
Right side of map, and counting from the RIGHT side of the mat, so the corner, 16 squares over, and 1 square up. 
(0,0) is the very edge of the map, with it being the BOTTOM of the square (the bolded line).
(0,1) is one square up, also on the BOLDED line. 
The robot alignment is (16,1) and the INSIDE OF THE WHEEL is on (16,1) for left and right. 
For up and down, get wall and MUSH + PUSH against the wall. 
If there are no walls, get a flat surface to push against with the bot. - I like food! 
"""



async def main():
    speed=500
    
    # Mission 5
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, -950, 0, velocity=speed) #Go forward from home
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, -90, -250, 300) #Turns clockwise to set up for turning lever
    await motor.run_for_degrees(port.A, 190, 360) #Sets up fork for pushing
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, 80, -250, 300) #Turns counterclockwise to push lever
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, 10, 0, velocity=speed) #Move forward to set up for mission 5
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, 90, -250, 300) #Turns counterclockwise to push lever
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, 67, -250, 300) #Turns counterclockwise to push lever
    
    # Mission 6
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, -100, 0, velocity=speed) #Go forward from mission
    await motor.run_for_degrees(port.C, -200, 360) #rotate to face the next mission
    await motor.run_for_degrees(port.A, 3, 360) #Sets up fork for pushing
    await runloop.sleep_ms(500)
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, 10, 0, velocity=speed) #Move forward to mission 6
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, 40, 0, velocity=speed) #Back up
    
    # Mission 10
    await motor.run_for_degrees(port.C, -150, 360) #rotate to face the next mission
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, 45, 0, velocity=speed)# Back up
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, 175, -250, 300) #Turns counterclockwise to go to next mission
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, -575, 0, velocity=speed) #Go forward from last mission to mission 10, Tip the Scales
    await motor_pair.move_tank_for_degrees(motor_pair.PAIR_1, 150, -250, 300) #Turns countercloockwards next mission
    


    
runloop.run(main())
